<suite name="CrossBrowserSuite" parallel="tests" thread-count="3">
    <!-- Chrome Tests -->
    <test name="ChromeTests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="tests.GoogleSearchTest" />
        </classes>
    </test>

    <!-- Firefox Tests -->
    <test name="FirefoxTests">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.GoogleSearchTest" />
        </classes>
    </test>

    <!-- Edge Tests -->
    <test name="EdgeTests">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="tests.GoogleSearchTest" />
        </classes>
    </test>

    <!-- Temporary Framework Test -->
    <test name="FrameworkTest">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="tests.FrameworkTest" />
        </classes>
    </test>
</suite>